<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
   
    <view class="page__bd">

        <view class="weui-cells__title">验货结果</view>
        <view class="weui-cells weui-cells_after-title">
            <radio-group bindchange="radioChange">
                <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                    <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view> 
                </label>
            </radio-group>
        </view>
        
        <view class="weui-cells__title"> 验货属性 </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">抽箱数</view>
                <view class="weui-cell__ft">
                  <input  placeholder="" value="{{product.properties[2].value}}"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">外箱尺寸</view>
                <view class="weui-cell__ft">
                  <input  placeholder="" value="{{product.properties[3].value}}"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">单件毛重</view>
                <view class="weui-cell__ft">
                  <input  placeholder="" value="{{product.properties[4].value}}"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">单件净重</view>
                <view class="weui-cell__ft">
                  <input  placeholder="" value="{{product.properties[5].value}}"/>
                </view>
            </view>
        </view>

         <view class="weui-cells__title">描述</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入文本" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>


        <view class="weui-cells__title">图片上传</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <block wx:for="{{files}}" wx:key="*this">
                                    <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                                        <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                                    </view>
                                </block>

                              <view class="weui-uploader__input-box">
                                <view class="weui-uploader__input" bindtap="chooseImage"></view>
                              </view>
                            </view>
                            
                        </view>
            </view>
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="bindSubmitTap">提交</button>
        </view>
    </view>
</view>