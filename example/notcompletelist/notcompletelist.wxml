<view class="page">
    <view class="page__bd">
        <view class="weui-search-bar">
            <view class="weui-search-bar__form" bindtap="bindSearchTap">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
                </label>
            </view>
      
        </view>
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">


                <view  class=" weui-media-box weui-media-box_text">
                    <view class="flex-row" style="display: flex;flex-direction: row; align-items: left; justify-content: space-between;">
                      <view class="flex-view-item checkItemCellLeft"> 发票号 </view>
                    </view>
                    <view class="flex-row" style="display: flex;flex-direction: row; align-items: left; justify-content: space-between;">
                      <view class="flex-view-item checkItemCellLeft"> 截止日期 </view>
                    </view>  
                </view>

                <view bindtap="bindItemTap" data-id="{{item.ticketNo}}"  class=" weui-media-box weui-media-box_text" wx:for="{{items}}" wx:key="item_{{index}}">
                    <view class="flex-row" style="display: flex;flex-direction: row; align-items: left; justify-content: space-between;">
                      <view class="flex-view-item checkItemCellLeft">{{item.ticketNo}}  </view>

                      <view class="flex-view-item checkItemCellRight">验货员 <span style="margin-left: 15px;"></span> {{item.checker}}</view>
                    </view>
                    <view class="flex-row" style="display: flex;flex-direction: row; align-items: left; justify-content: space-between;">
                      <view class="flex-view-item checkItemCellLeft">{{item.outDate}}  </view>
                      <view class="flex-view-item checkItemCellRight">跟单员 <span style="margin-left: 15px;"></span> {{item.tracker}}  </view>
                    </view>  
                </view>


                <view > 
                  <view class="weui-loadmore" wx:if="{{loading}}">
                      <view class="weui-loading"></view>
                      <view class="weui-loadmore__tips">正在加载</view>
                  </view>
                </view>
            </view>
        </view>
       
    </view>
</view>